<?xml version="1.0" encoding="utf-8"?>
<com.example.gedune.bookcollection.widget.SlidingButtonView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:padding="20dp"
        android:id="@+id/list_adapter_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="41dp"
            android:text="@string/stringValue1"
            android:textColor="#FF555555"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/book_img"
            android:layout_marginStart="24dp"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/book_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/stringValue2"
            android:textColor="#FF999999"
            android:layout_below="@+id/book_name"
            android:layout_alignStart="@+id/book_name"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/book_img"
            android:text="@string/stringValue1"
            android:scaleType="fitXY"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>


    <TextView
        android:id="@+id/book_delete"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/list_adapter_rl"
        android:background="@color/red_dark"
        android:gravity="center"
        android:text="删 除"
        android:textSize="18sp"
        android:textColor="#DDFFFFFF"/>

    </RelativeLayout>

</com.example.gedune.bookcollection.widget.SlidingButtonView>
