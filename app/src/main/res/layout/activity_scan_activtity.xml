<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scan_activtity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gedune.bookcollection.activity.ScanActivtity">


    <FrameLayout
        android:id="@+id/fl_my_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        >

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/scan_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/scan_cancel"
            android:layout_margin="10dp"
            android:background="@drawable/oval"
            android:src="@drawable/scan_return"
            android:layout_width="30dp"
            android:layout_height="30dp" />


        <ImageButton
            android:id="@+id/scan_flash"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/oval"
            android:src="@drawable/path"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:layout_marginTop="480dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/basec_white"
            android:text="@string/scan_Hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

    </RelativeLayout>







</FrameLayout>
